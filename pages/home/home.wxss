/* pages/home/home.wxss */
page {
  background-color: #404357;
}
.header-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 360rpx;
  padding: 100rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  background-image: linear-gradient(#70b5ff, #8e7eff);
}
.picker {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
}
.picker .date-text {
  font-size: 32rpx;
  color: #ffffff;
}
.picker .date-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.header-main-box {
  height: 200rpx;
  display: flex;
  align-items: center;
}
.header-main-item {
  flex: 1;
  color: #ffffff;
  text-align: center;
}
.header-main-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.header-main-price {
  font-size: 48rpx;
}



.main-box {
  margin-top: 410rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 50rpx;
}
.list-title {
  font-size: 30rpx;
  color: #7b8199;
  margin-bottom: 30rpx;
}
.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 150rpx;
  border-radius: 12rpx;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 10rpx #343746;
  background-color: #464b5f;
}
.list-item-info-box {
  display: flex;
  align-items: center;
}
.img-box {
  width: 74rpx;
  height: 74rpx;
  border-radius: 12rpx;
}
.img-box .list-icon {
  width: 100%;
  height: 100%;
}
.list-item-info {
  margin-left: 30rpx;
}
.list-item-info .name {
  color: #ffffff;
  font-size: 30rpx;
}
.list-item-info .time {
  color: rgba(255, 255, 255, .3);
  font-size: 24rpx;
}
.list-item-price {
  color: #ffffff;
  font-size: 34rpx;
}


.add-btn {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-image: linear-gradient(#70b5ff, #8e7eff);
}
.add-btn .add-icon {
  width: 54rpx;
  height: 54rpx;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}